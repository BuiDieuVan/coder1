extends ../layouts/common.pug

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger #{error}


    form(action="/users/create" method="POST" enctype="multipart/form-data")
        label(for="name") Name
        input(name="name" type="text" class="ml-2" value= values? values.name : "")
        br
        label(for="name") Phone
        input(name="phone" type="number" class="ml-1" value= values? values.phone : "") 
        br
        label(for="avatar") Avatar
        input(name="avatar" type="file" class="m-3")
        br
        button(class="btn btn-primary") Create